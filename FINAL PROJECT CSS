/* FinalProject.css */

/* Set up a container for the coach cards */
#coaches-list {
    display: flex;               /* Use flexbox for layout */
    flex-wrap: wrap;            /* Allow cards to wrap to the next line if necessary */
    justify-content: space-between; /* Distribute space between cards */
    margin: 20px;               /* Add margin around the list */
}

/* Example CSS for the coach cards */
.coach-card {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 10px;
    margin: 10px;
    display: inline-block; /* This allows cards to sit side by side */
