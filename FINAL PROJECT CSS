/* Search Input Styling */
#search input[type="text"] {
    width: 400px; /* Width of the search bar */
    padding: 20px; /* Increased padding for a taller appearance */
    border: 1px solid #333;
    border-radius: 6px;
    background-color: #1c1c1c;
    color: #d1d1d1;
    font-size: 16px; /* Slightly larger text for better visibility */
    transition: border-color 0.3s ease; /* Smooth transition for focus effect */
}

#search input[type="text"]:focus {
    border-color: #ff1a75; /* Change border color on focus */
    outline: none; /* Remove outline */
}

/* Search Button Styling */
#search button {
    background-color: #00e6e6; /* Neon cyan button */
    border: none;
    color: #181818;
    padding: 20px; /* Match the height of the input */
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
    margin-left: 10px; /* Space between input and button */
    transition: background-color 0.3s ease, transform 0.3s ease;
}

#search button:hover {
    background-color: #00cccc; /* Darker cyan on hover */
    transform: scale(1.05); /* Slight zoom on hover */
}

/* Responsive Media Queries */
@media (max-width: 768px) {
    #search {
        flex-direction: column; /* Stack the search input and button */
    }

    #search input[type="text"] {
        width: 100%; /* Make input full-width */
        margin-bottom: 10px; /* Add margin between input and button */
    }

    #search button {
        width: 100%; /* Make button full-width */
    }

    #coaches-list {
        flex-direction: column; /* Stack cards vertically */
        align-items: center; /* Center cards horizontally */
    }

    .coach-card {
        width: 80%; /* Make cards responsive on smaller screens */
    }
}
